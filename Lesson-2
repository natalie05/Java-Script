			  function multiply(x, y)
				{
				  return x*y;
				}
			  function divide(x, y)
				{
				  return x/y;
				}
			 function add(x, y)
				{
				  return x-y;
				}
			 function deduct(x, y)
				{
				  return x-y;
				}        
				
			  //6.      
			  function mathOperation(arg1, arg2, operation)
				{	
				let f;
				switch (operation) {
				  case "multiply":
				   f = multiply(arg1, arg2);
					break;
				   case "divide":
					f = divide(arg1, arg2);
					break;
				   case "add":
					 f = add(arg1, arg2);
					 break;
				   default:
					 f = deduct(arg1, arg2);
				  }
				  return f;
				}      
			  
				alert(mathOperation(5, 6,  "multiply"));  
				
