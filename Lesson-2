			function Operation(a, b){
			//  let a = 5, b = -1;
			  if (a*b < 0) { //разных знаков
					alert(a+b);
					return a+b;}
			 else if (a < 0) { //одного знака, отрицательные
				alert(a-b);
				return a-b;}
			 else {  //одного знака, положительные
				alert(a*b);
				return a*b; 
				}
			}
      
